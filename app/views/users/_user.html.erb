<div class="row item">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-1 thumb">
        <%= image_tag(user.picture_thumbnail, width: 60) if user.picture_thumbnail %>
      </div>
      <div class="col-md-11">
        <p><strong><%= user.full_name %></strong></p>
        <p><%= user.email %></p>
        <p><small><%= user.gender %></small></p>
      </div>
    </div>
  </div>
</div>